@using Mvc.Mailer
@using WellaMates.Models
@{
    var visit = (Visit)ViewBag.Visit;
    var controller = (string)ViewBag.Controller;
    var paymentDay = (string)ViewBag.PaymentDay;
}


<p>Você recebeu uma resposta de @ViewBag.Sender na requisição de reembolso da visita de "@visit.Date.ToString("dd/MM/yyyy")":</p>
<br/>
<div style="text-align: left; margin-bottom: 10px;">
    <p style="white-space: pre-wrap; border-bottom: 2px #D30F44 solid"><b>Resposta:</b> 
        O Pagamento do Reembolso foi Confirmado para o dia <b>@paymentDay</b>.</p>
</div>
<br/>
<strong><a href="@Url.Abs(@Url.Action("VisitDetail", controller, new { @id = visit.VisitID }))">Ver Requisição da Visita de "@visit.Date.ToString("dd/MM/yyyy")"</a></strong>
<br/>
<br/>
<p>
    Atenciosamente,<br/>
    Equipe <strong>Wella Educação</strong>
</p>

