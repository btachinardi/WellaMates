@using Mvc.Mailer
@using WellaMates.Models
@{
    var update = (RefundItemUpdate)ViewBag.Updates[0];
    var monthly = (Monthly)ViewBag.Monthly;
    var controller = (string)ViewBag.Controller;
}


<p>Você recebeu uma resposta de @ViewBag.Sender na requisição do mês de "@monthly.Month":</p>
<br/>
@{
    <div style="text-align: left; margin-bottom: 10px;">
        <p style="white-space: pre-wrap; border-bottom: 2px #D30F44 solid"><b>Resposta:</b> @{ Html.RenderPartial("_RefundItemStatusNamePartial", update.Status); }</p>
        @if (!String.IsNullOrEmpty(update.Comment))
        {
            <b>Comentários:</b><br/>
            <p style="white-space: pre-wrap; border: 2px #D30F44 solid; border-left:none; border-right:none;" >@update.Comment</p>
        }
        <strong><a href="@Url.Abs(@Url.Action("RefundItemDetail", controller, new { @id = update.RefundItemID }))">Ver Histórico</a></strong>
    </div>
}
<br/>
<strong><a href="@Url.Abs(@Url.Action("MonthlyDetail", controller, new { @id = monthly.MonthlyID }))">Ver Requisição do Mês de "@monthly.Month"</a></strong>
<br/>
<br/>
<p>
    Atenciosamente,<br/>
    Equipe <strong>Wella Educação</strong>
</p>

