@using WellaMates.Models
@model WellaMates.Models.RefundStatus

@switch (Model)
{
    case RefundStatus.WAITING_FOR_MANAGER:
        if (ViewBag.NeutralStatusIcons != null && ViewBag.NeutralStatusIcons == true)
        {
            <text>Esperando pelo Supervisor</text>
        }
        else if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <text>Esperando pelo Supervisor</text>
        }
        else
        {
            <text>Esperando por sua Ação</text>
        }
        break;
    case RefundStatus.WAITING_FOR_FREELANCER:
        if (ViewBag.NeutralStatusIcons != null && ViewBag.NeutralStatusIcons == true)
        {
            <text>Esperando pelo Requerente</text>
        }
        else if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <text>Esperando por sua Ação</text>
        }
        else
        {
            <text>Esperando pelo Requerente</text>
        }
        break;
    case RefundStatus.REJECTED:
        <text>Rejeitado</text>
        break;
    case RefundStatus.ACCEPTED:
        <text>Aprovado para Pagamento</text>
        break;
    case RefundStatus.PAID:
        <text>Pagamento Efetuado</text>
        break;
    case RefundStatus.TO_BE_PAID:
        <text>Pagamento Agendado</text>
        break;
    case RefundStatus.EDITING:
        <text>Editando</text>
        break;
    case RefundStatus.NON_EXISTENT:
        <text>Sem reembolso</text>
        break;
}