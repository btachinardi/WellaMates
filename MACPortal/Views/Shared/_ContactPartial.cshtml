@model WellaMates.ViewModel.ContactVM

@using (var f = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal)))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @f.FormGroup().Class("input-style").TextBoxFor(m => m.Name).Disabled(Model.Name != null)
    @f.FormGroup().Class("input-style").TextBoxFor(m => m.Email).Disabled(Model.Email != null)
    @f.FormGroup().Class("input-style").TextBoxFor(m => m.Title)
    @f.FormGroup().TextAreaFor(m => m.Message).Rows(4)
    
    @Html.Bootstrap().SubmitButton().AppendIcon("glyphicon glyphicon-chevron-right").Text("Enviar").Size(ButtonSize.Large).ButtonBlock()

}