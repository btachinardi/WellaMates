@using WellaMates.Models
@model WellaMates.Models.RefundItemStatus

@switch (Model)
{
    case RefundItemStatus.CREATED:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -140px 0" title="Criado"/>
        break;
    case RefundItemStatus.UPDATED:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -140px 0" title="Atualizado"/>
        break;
    case RefundItemStatus.ACCEPTED:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: 0 0" title="Aprovado para Pagamento"/>
        break;
    case RefundItemStatus.REJECTED:
        if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -210px 0" title="Rejeitado"/>
        }
        else
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -350px 0" title="Rejeitado"/>
        }
        break;
    case RefundItemStatus.REJECTED_NO_APPEAL:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -70px 0" title="Rejeitado sem direito a Apelo"/>
        break;
    case RefundItemStatus.APPEALED:
        if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -350px 0" title="Apelado"/>
        }
        else
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -210px 0" title="Apelado"/>
        }
        break;
    case RefundItemStatus.PAID:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -280px 0" title="Pagamento Efetuado"/>
        break;
    case RefundItemStatus.DELETED:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -210px -140px" title="Deletado"/>
        break;
    case RefundItemStatus.SENT:
        if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -350px 0" title="Enviado"/>
        }
        else
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -210px 0" title="Enviado"/>
        }
        break;
}