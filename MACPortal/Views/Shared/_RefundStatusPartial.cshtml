@using WellaMates.Models
@model WellaMates.Models.RefundStatus

@switch (Model)
{
    case RefundStatus.WAITING_FOR_MANAGER:
        if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -350px 0" title="Esperando pelo Supervisor"/>
        }
        else
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -210px 0" title="Esperando por sua ação"/>
        }
        break;
    case RefundStatus.WAITING_FOR_FREELANCER:
        if (ViewBag.InvertStatusIcons == null || ViewBag.InvertStatusIcons == false)
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -210px 0" title="Esperando por sua ação"/>
        }
        else
        {
            <img src="~/Content/images/empty.png" class="icons" style="background-position: -350px 0" title="Esperando pelo Requerente"/>
        }
        break;
    case RefundStatus.REJECTED:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -70px 0" title="Rejeitado"/>
        break;
    case RefundStatus.ACCEPTED:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: 0 0" title="Aprovado para Pagamento"/>
        break;
    case RefundStatus.PAID:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -280px 0" title="Pagamento Efetuado"/>
        break;
    case RefundStatus.EDITING:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -140px 0" title="Editando"/>
        break;
    case RefundStatus.NON_EXISTENT:
        <img src="~/Content/images/empty.png" class="icons" style="background-position: -0px 0" title="Sem reembolso"/>
        break;
}