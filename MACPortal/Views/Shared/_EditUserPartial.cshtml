@using WellaMates.Models
@using WellaMates.ViewModel
@model WellaMates.ViewModel.UserVM

@using (var regular = Html.Bootstrap().Begin(new Form().Type(FormType.Horizontal).InputWidthLg(7)))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        @Html.HiddenFor(model => model.UserID)
        @Html.HiddenFor(model => model.Mode)
        
        if (Model.Mode == EditUserMode.PASSWORD)
        {
            @regular.FormGroup().Class("input-style").PasswordFor(model => model.OldPassword).Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").PasswordFor(model => model.NewPassword).Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").PasswordFor(model => model.ConfirmPassword).Label().WidthLg(5)
            
            @Html.HiddenFor(model => model.Gender)
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.ArtisticName)
            @Html.HiddenFor(model => model.CPF)
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.Birthday)
            @Html.HiddenFor(model => model.HomePhone)
            @Html.HiddenFor(model => model.CellPhone)
            @Html.HiddenFor(model => model.CEP)
            @Html.HiddenFor(model => model.Street)
            @Html.HiddenFor(model => model.Number)
            @Html.HiddenFor(model => model.Neighborhood)
            @Html.HiddenFor(model => model.City)
            @Html.HiddenFor(model => model.State)
            @Html.HiddenFor(model => model.AcceptEmail)
            @Html.HiddenFor(model => model.AcceptSMS)

        }
        else 
        {
            @Html.HiddenFor(model => model.OldPassword)
            if (Model.Mode == EditUserMode.COMPLETE)
            {   
                @regular.FormGroup().Class("input-style").PasswordFor(model => model.NewPassword).Label().WidthLg(5)
                @regular.FormGroup().Class("input-style").PasswordFor(model => model.ConfirmPassword).Label().WidthLg(5)
            }
            else
            {
                @Html.HiddenFor(model => model.NewPassword)
                @Html.HiddenFor(model => model.ConfirmPassword)
            }
            
            <br/>
            @regular.FormGroup().Id("gender-buttons").RadioButtonsFromEnumFor(model => model.Gender).AsButtonGroup().Label().Class("col-lg-5 remove-col-lg-2")
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Name).Placeholder("Pedro Antônio").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.ArtisticName).Placeholder("Antônio").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.CPF).Disabled().Id("cpf-input").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Email).Placeholder("pedro@wella.com.br").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Birthday).HtmlAttributes(new{@type = "date"}).Label().WidthLg(5)
            <br/>
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.HomePhone).Placeholder("(11)5239-9872").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.CellPhone).Placeholder("(11)9-5239-9872").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.CEP).Placeholder("07931-954").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Street).Placeholder("Avenida Roberto").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Number).Placeholder("945").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Complement).Placeholder("72").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.Neighborhood).Placeholder("Vila Madalena").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.City).Placeholder("São Paulo").Label().WidthLg(5)
            @regular.FormGroup().Class("input-style").TextBoxFor(model => model.State).Placeholder("SP").Label().WidthLg(5)
        }
        
        @Html.Bootstrap().SubmitButton().AppendIcon("glyphicon glyphicon-chevron-right").Text(Model.SubmitButtonText).ButtonBlock().Size(ButtonSize.Large)
    }

<script type="text/javascript">
    window.onload = function() {
        var male = "@(Model.Gender == Gender.Masculino)";
        if (male == "True") {
            $("label[for='Gender_0']").addClass("active");
        } else {
            $("label[for='Gender_1']").addClass("active");
        }

    };
</script>